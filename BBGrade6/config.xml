<?xml version='1.0' encoding='utf-8'?>
<widget id="Akshara.BuildingBlocks.grade6" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BBgrade6</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="Fullscreen" value="true" />
        <preference name="Orientation" value="landscape" />
        <icon background="Assets\mdpi\ic_akshara_logo.png" density="mdpi" foreground="Assets\mdpi\ic_akshara_logo.png" />
        <icon background="Assets\hdpi\ic_akshara_logo.png" density="hdpi" foreground="Assets\hdpi\ic_akshara_logo.png" />
        <icon background="Assets\xhdpi\ic_akshara_logo.png" density="xhdpi" foreground="Assets\xhdpi\ic_akshara_logo.png" />
        <icon background="Assets\xxhdpi\ic_akshara_logo.png" density="xxhdpi" foreground="Assets\xxhdpi\ic_akshara_logo.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
